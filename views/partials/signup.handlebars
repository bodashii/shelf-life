<section class="section container">
  <div class="columns">
    <div class="column">
      {{!-- login form --}}
      <form class="box" action="">
        <h2 class="title content">Login</h2>
        <div class="field">
          <label class="label" for="email">Email</label>  
            <input class="input" type="email" id="emailLogin">
        </div>

        <div class="field">
          <label class="label" for="current-password">Password</label>  
            <input class="input" type="password" id="current-password">
        </div>

        <button class="button is-primary" onclick="signUpHandler()">Login</button>
      </form>
    </div>

    <div class="column">
       <form class="box">
         <h2 class="title content">Sign Up</h2>
        <div class="field">
            <label class="label" for="firstName">Name</label>
            <div class="control">
                <input class="input" type="text" placeholder="First Name" id="firstName">
            </div>
        </div>

        <div class="field">
            <label class="label" for="lastName"></label>
            <div class="control">
                <input class="input" type="text" placeholder="Last Name" id="lastName">
            </div>
        </div>

        <div class="field">
            <label class="label" for="username">Username</label>
            <div class="control">
                <input class="input" type="text" placeholder="Merlin's Owl" id="username">
            </div>
        </div>

        <div class="field">
            <label class="label" for="username">Email</label>
            <div class="control">
                <input class="input" type="email" placeholder="thewiz@archimedes.com" id="email">
            </div>
        </div>

        <div class="field">
            <label class="label" for="username">Password</label>
            <div class="control">
                <input class="input" type="password" placeholder="...must be unique" id="new-password">
            </div>
        </div>

        <div class="field">
            <label class="label" for="username">Age</label>
            <div class="control">
                <input class="input" type="number" placeholder="for your safety" id="age">
            </div>
        </div>
        <button class="button is-medium is-primary" onclick="() => signUpHandler">Sign Up</button> 

      </form>
    </div>

  </div>
</section>

