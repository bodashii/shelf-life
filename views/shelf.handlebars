<section>
    <h2>Shelf It</h2>

    <form>
        <div>
            <label for="post-title">Title</label>
            <input type="text" id="post_title" name="post-title"/>
        </div>
        <div>
            <label for="post-url">Link</label>
            <input type="post-url" name="post-url" />
        </div>
        <button class="button is-primary" type="submit">Create</button>
    </form>
</section>

{{#if posts.length}}
<section>
    <h2>Your Shelves</h2>
    <ol>
        {{#each posts as |post|}}
        <li>
            {{> post-info post}}
            <a href="/shelf/edit/{{post.id}}" class="edit-link">edit</a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}

